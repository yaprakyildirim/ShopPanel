@model List<ProductDto>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Ürün Yönetimi /</span> Ürünler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-5">

            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Product" asp-action="Add">
                Ürün Ekle <i class="bx bx-plus"></i>
            </a>

            <table class="table table-bordered" id="productsTable" width="100%" collspacing="0">
                <thead>
                    <tr>
                        <th>Kategori</th>
                        <th>Ürün Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>Kategori</th>
                        <th>Ürün Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>

                <tbody class="table-border-bottom-0">
                    @foreach (var product in Model)
                    {
                        <tr name="@product.Id">
                            <td>@product.Category.Name</td>
                            <td>@product.ProductName</td>
                            <td>@product.CreatedDate</td>
                            <td>@product.CreatedBy</td>
                            <td>@(product.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>

                                <a class="btn btn-primary btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-productId="@product.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-productId="@product.Id"><i class="bx bx-minus-circle"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->
</div>

@section Scripts{
    <script src="~/js/productIndex.js" type="application/ecmascript"></script>
}